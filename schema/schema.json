{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "identifier": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "Identifier"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "name"
            ]
        },
        "number": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "Number"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "value"
            ]
        },
        "add": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "Add"
                },
                "args": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "$ref": "#/$defs/numeric_expression"
                    }
                }
            },
            "required": [
                "type",
                "args"
            ]
        },
        "numeric_expression": {
            "anyOf": [
                {
                    "$ref": "#/$defs/number"
                },
                {
                    "$ref": "#/$defs/identifier"
                },
                {
                    "$ref": "#/$defs/add"
                }
            ]
        }
    },
    "anyOf": [
        {
            "$ref": "#/$defs/numeric_expression"
        }
    ]
}